{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Program",
            "type": "shell",
            "command": "./myenv/bin/python",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }, {
            "label": "Run Tests",
            "type": "shell",
            "command": "./myenv/bin/python",
            "args": [
                "-m",
                "unittest",
                "discover",
                "-s",
                "tests",
                "-p",
                "\"test_*.py\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }

    ]
}